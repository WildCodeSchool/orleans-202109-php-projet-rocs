{% if errors is not empty %}
	<div class="alert alert-danger p-0 ps-4 col-6 offset-3">
		{% for error in errors %}
			<p class="p-0 m-0 fs-6">{{ error }}</p>
		{% endfor %}
	</div>
{% endif %}

<form method="post" enctype="multipart/form-data" class="container mb-5 mt-2">

	<div class="row">
		<div class="mb-3 col-6 offset-3">
			<label for="Civilité" class="form-label">Civilité</label>
			<div class="form-check form-check-inline mx-5">
				<input class="form-check-input" type="radio" name="gender" id="Mme" value="{{ trainer.gender }} ">
				<label class="form-check-label" for="Mme">Mme</label>
			</div>
			<div class="form-check form-check-inline">
				<input class="form-check-input" type="radio" name="gender" id="Mr" value="{{ trainer.gender }} ">
				<label class="form-check-label" for="Mr">Mr</label>
			</div>
		</div>
		<div class="row">
			<div class="mb-3 col-6 offset-3">
				<label for="lastname" class="form-label">Nom</label>
				<input type="text" name="lastname" id="lastname" class="form-control" placeholder="Nom" value=" {{ trainer.lastname }} ">
			</div>
		</div>
		<div class="row">
			<div class="mb-3 col-6 offset-3">
				<label for="firstname" class="form-label">Prénom</label>
				<input type="text" name="firstname" id="firstname" class="form-control" placeholder="Prénom" value=" {{ trainer.firstname }} ">
			</div>
		</div>
		<div class="row">
			<div class="mb-3 col-6 offset-3">
				<label for="phoneNumber" class="form-label">Téléphone</label>
				<input type="tel" name="phoneNumber" id="phoneNumber" class="form-control" placeholder="Téléphone" value=" {{ trainer.phoneNumber }} ">
			</div>
		</div>
		<div class="row">
			<div class="mb-3 col-6 offset-3">
				<label for="email" class="form-label">E-mail</label>
				<input type="mail" name="email" id="email" class="form-control" placeholder="E-mail" value=" {{ trainer.email }} ">
			</div>
		</div>
		<div class="row">
			<div class="mb-3 col-6 offset-3">
				<label for="image">Image</label>
				<input type="file" name="image" id="image" class="form-control"/>
			</div>
		</div>
		<div class="row">
			<div class="mb-3 col-6 offset-3">
				<button type="submit" class="btn btn-primary btnAddTrainer offset-5 col-2 mt-2">{{ button_name|default('Ajouter') }}</button>
			</div>
		
		</div>
	</form>
</div></div>
