{% if errors is not empty %}
<div class="alert alert-danger">
    {% for error in errors %}
    <div>{{error}}</div>
    {% endfor %}
</div>
{% endif %}
<form method="post" class="container" enctype="multipart/form-data">
    <div class="form-group mb-3">
        <label for="role" class="form-label">Role</label>
        <input type="text" class="form-control" id="role" value="{{ office.role }}" name="role">
    </div>
    <div class="form-group mb-3">
        <label for="lastname" class="form-label">Nom</label>
        <input type="text" class="form-control" id="lastname" value="{{ office.lastname }}" name="lastname">
    </div>
    <div class="form-group mb-3">
        <label for="firstname" class="form-label">Pr√©nom</label>
        <input type="text" class="form-control" id="firstname" value="{{ office.firstname }}" name="firstname">
    </div>
    <button class="btn btn-primary btnAddActivity">{{ button_name|default('Ajouter') }}</button>
    </div>
    <div class="form-group mb-3">
        <label for="image" class="form-label">Image</label>
        <input type="file" class="form-control" id="image" name="image">
    </div>
    <button class="btn btn-primary btnAddActivity">{{ button_name|default('Ajouter') }}</button>
    </div>
    <div>
        <a class="text-dark" href="/admin/office/" role="button">Retour</a>
    </div>
</form>