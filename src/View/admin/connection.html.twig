{% extends "adminLayout.html.twig" %}
{% block title %}
{{ parent() }} - Connexion
{% endblock %}
{% block stylesheet %}
{{ parent() }}
<link rel="stylesheet" href="/assets/css/admin/connection.css">
{% endblock %}
{% block footer %}{% endblock %}
{% block content %}
<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
    <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
        <path
            d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
    </symbol>
    <symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
        <path
            d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
    </symbol>
    <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
        <path
            d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
    </symbol>
</svg>


<div class="container d-flex align-items-center h-75 ">
    <div class="col">
        <form action="" method="post" class="border border-success my-5 rounded p-5">
            <h1 class="offset-2">Connexion</h1>
            {% if errors.adminNotFound %}
            <div class="alert alert-danger p-0 mt-2 col-8 offset-2">
                <p class="m-0 ms-3 fs-6">
                    <svg class="bi flex-shrink-0 me-2 danger" role="img" aria-label="Danger:">
                        <use xlink:href="#exclamation-triangle-fill" />
                    </svg>
                    {{ errors.adminNotFound }}
                </p>
            </div>
            {% endif %}
            <div class="form-floating mb-3 col-8 offset-2">
                <input type="text" class="form-control" id="username" name="username" placeholder="username"
                    value="{{ data.username }}">
                <label for="username">Utilisateur</label>
                {% if errors.emptyUsername %}
                <div class="alert alert-danger p-0 mt-2">
                    <p class="m-0 ms-3 fs-6">
                        <svg class="bi flex-shrink-0 me-2 danger" role="img" aria-label="Danger:">
                            <use xlink:href="#exclamation-triangle-fill" />
                        </svg>
                        {{ errors.emptyUsername }}
                    </p>
                </div>
                {% elseif errors.toLongUsername %}
                <div class="alert alert-danger p-0 mt-2">
                    <p class="m-0 ms-3 fs-6">
                        <svg class="bi flex-shrink-0 me-2 danger" role="img" aria-label="Danger:">
                            <use xlink:href="#exclamation-triangle-fill" />
                        </svg>
                        {{ errors.toLongUsername }}
                    </p>
                </div>
                {% endif %}
            </div>
            <div class="form-floating mb-3 col-8 offset-2">
                <input type="password" class="form-control" id="password" name="password" placeholder="password">
                <label for="password">Mot de Passe</label>
                {% if errors.emptyPassword %}
                <div class="alert alert-danger p-0 mt-2">
                    <p class="m-0 ms-3 fs-6">
                        <svg class="bi flex-shrink-0 me-2 danger" role="img" aria-label="Danger:">
                            <use xlink:href="#exclamation-triangle-fill" />
                        </svg>
                        {{ errors.emptyPassword }}
                    </p>
                </div>
                {% elseif errors.toLongPassword %}
                <div class="alert alert-danger p-0 mt-2">
                    <p class="m-0 ms-3 fs-6">
                        <svg class="bi flex-shrink-0 me-2 danger" role="img" aria-label="Danger:">
                            <use xlink:href="#exclamation-triangle-fill" />
                        </svg>
                        {{ errors.toLongPassword }}
                    </p>
                </div>
                {% endif %}
            </div>
            {% if errors.notFind %}
            <div class="alert alert-danger p-0 mt-2 col-8 offset-2">
                <p class="m-0 ms-3 fs-6">
                    <svg class="bi flex-shrink-0 me-2 danger" role="img" aria-label="Danger:">
                        <use xlink:href="#exclamation-triangle-fill" />
                    </svg>
                    {{ errors.notFind }}
                </p>
            </div>
            {% endif %}
            <button class="btn btn-success col-2 offset-5 mb-3">Connecter</button>
        </form>
    </div>

</div>
{% endblock %}