{% extends 'layout.html.twig' %}
{% block title %}Activités
{% endblock %}
{% block stylesheet %}
	<link rel="stylesheet" href="assets/css/activity.css">
{% endblock %}
{% block content %}

	<h1 class="text-center">Nos activités</h1>
	{% for activities in activities %}
	
<main class="container d-flex justify-content-center">
	<div class="card w-75 my-5  d-flex align-self-center">
		<div class="row g-0">
			<div class="col-md-8">
				<div class="card-body">
					<h2 class="card-title mb-5">{{ activities.name }}</h2>
					<p class="card-text">{{ activities.description }}</p>
					<a class="btn activity-btn mb-2" href="#">en savoir plus</a>
				</div>
			</div>
			<div class="col-md-4 ">
				<img src="assets/images/activity.jpg" class="img-fluid rounded-start" alt="...">
			</div>
		</div>
	</div>
</main 
{% endfor %}
{% endblock %}
