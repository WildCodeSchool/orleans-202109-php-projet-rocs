{% extends 'layout.html.twig' %}
{% block title %}Activités
{% endblock %}
{% block stylesheet %}
	<link rel="stylesheet" href="assets/css/activites.css">
{% endblock %}
{% block content %}
	<h1 class="text-center mt-5">Nos activités</h1>
	<main class="container fluid ">
		{% for activity in activities %}
			<div class="card  card-activities  bg-light  w-80   my-5">
				<div class="row g-0 ">
					<div class="col-md-8 p-3">
						<div class="card-body card-activites ">
							<h2 class="card-title mb-2">{{ activity.name }}</h2>
							<p class="card-text ">{{ activity.description }}</p>
							<a class="btn activity-btn mb-2" href="activite?id={{ activity.id }}">
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-home" viewBox="0 0 16 16">
  <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
</svg>
								en savoir plus</a>
						</div>
					</div>
					<div class="col-md-4 p-5 d-flex align-items-center ">
						<img src="uploads/{{ activity.image }} " class="img-fluid rounded" alt="image activites">
					</div>
				</div>
			</div>
		{% endfor %}
	</main>
{% endblock %}
